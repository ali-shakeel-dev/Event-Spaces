<%= form_with model: @space, local: true, class: "space-form max-w-sm mx-auto mt-4 bg-white p-6 rounded-lg shadow-lg" do |form| %>
  <!-- Name -->
  <div class="mb-4">
    <%= form.label :name, "Space Name", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <!-- Per Hour -->
  <div class="mb-4">
    <%= form.label :per_hour, "Rate per Hour", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :per_hour, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <!-- Location -->
  <div class="mb-4">
    <%= form.label :location, "Location", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :location, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <!-- Capacity -->
  <div class="mb-4">
    <%= form.label :capacity, "Capacity", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :capacity, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <!-- Area -->
  <div class="mb-4">
    <%= form.label :area, "Area (sq. ft.)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :area, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <!-- Description -->
  <div class="mb-4">
    <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
    <%= form.rich_text_area :description, class: "mt-1 block w-full rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <!-- Submit Button -->
  <div class="mt-6">
    <%= form.submit "Create Space", class: "w-full cursor-pointer bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
  </div>
<% end %>


